
using namespace std;

vec4 main(Texture2d tex0) {

  float time = sin(getTime()/.9);

  vec2 uv = fragment(getVertexTexCoord());
  uv.x = mix(-1.0, 1.0, uv.x);
  uv.y = mix(-1.0, 1.0, uv.y);
	
  
  vec2 mirrorUvs = abs(fract(uv * 0.5) - time);


  vec4 tex = tex0.sample(mirrorUvs);

  return tex;
}
